<Window x:Class="TaskbarLyrics.App.SmtcTimelineMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SMTC Timeline Monitor"
        Width="620"
        Height="380"
        MinWidth="480"
        MinHeight="280"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBox x:Name="TimelineTextBox"
                 Grid.Row="0"
                 FontFamily="Consolas"
                 FontSize="13"
                 IsReadOnly="True"
                 VerticalScrollBarVisibility="Auto"
                 HorizontalScrollBarVisibility="Auto"
                 TextWrapping="NoWrap"
                 AcceptsReturn="True" />

        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">
            <Button Width="110" Margin="0,0,8,0" Content="Copy" Click="CopyButton_Click" />
            <Button Width="110" Content="Close" Click="CloseButton_Click" />
        </StackPanel>
    </Grid>
</Window>
