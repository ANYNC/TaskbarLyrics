<Window x:Class="TaskbarLyrics.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TaskbarLyrics Settings"
        Width="460"
        Height="520"
        WindowStartupLocation="CenterScreen">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="16">
            <TextBlock Text="Integration" FontWeight="SemiBold" Margin="0,0,0,8" />
            <CheckBox x:Name="NeteaseCheckBox" Content="Enable Netease" Margin="0,0,0,6" />
            <CheckBox x:Name="QQMusicCheckBox" Content="Enable QQMusic" Margin="0,0,0,6" />

            <TextBlock Text="Display" FontWeight="SemiBold" Margin="0,14,0,8" />
            <CheckBox x:Name="StartupCheckBox" Content="Show lyrics on startup" Margin="0,0,0,6" />
            <CheckBox x:Name="BackgroundCheckBox" Content="Show background" Margin="0,0,0,6" />
            <CheckBox x:Name="BorderCheckBox" Content="Show border" Margin="0,0,0,6" />

            <TextBlock Text="Font size" Margin="0,8,0,4" />
            <TextBox x:Name="FontSizeTextBox" Width="120" />

            <TextBlock Text="Text color (#AARRGGBB)" Margin="0,8,0,4" />
            <TextBox x:Name="ForegroundColorTextBox" Width="160" />

            <TextBlock Text="Background opacity (0-1)" Margin="0,8,0,4" />
            <TextBox x:Name="BackgroundOpacityTextBox" Width="120" />

            <TextBlock Text="Window width (px)" Margin="0,8,0,4" />
            <TextBox x:Name="WindowWidthTextBox" Width="120" />

            <TextBlock Text="Horizontal anchor" Margin="0,8,0,4" />
            <ComboBox x:Name="AnchorComboBox" Width="160">
                <ComboBoxItem Content="Left" />
                <ComboBoxItem Content="Center" />
                <ComboBoxItem Content="Right" />
            </ComboBox>

            <TextBlock Text="X offset (px)" Margin="0,8,0,4" />
            <TextBox x:Name="XOffsetTextBox" Width="120" />

            <TextBlock Text="Y offset (px)" Margin="0,8,0,4" />
            <TextBox x:Name="YOffsetTextBox" Width="120" />

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,18,0,0">
                <Button Content="Save" Width="80" Margin="0,0,8,0" Click="SaveButton_Click" />
                <Button Content="Cancel" Width="80" Click="CancelButton_Click" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>
